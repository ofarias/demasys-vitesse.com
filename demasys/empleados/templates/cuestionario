drop table demasys_vitesse_new.empleados_cuestionario;
drop table demasys_vitesse_new.empleados_InfoGral;
create table demasys_vitesse_new.empleados_InfoGral(
    id				bigint auto_increment,
	idsolicitante 	bigint not null,
    nombreCompleto 	varchar(60),
    telefono 		varchar(30),
    edoCivil 		varchar(20),
    cadadoPor 		varchar(30),
    numHijos 		varchar(2),
    nomEsposa 		varchar(30),
    ocupacionEsp 	varchar(40),
    vivenPadres 	varchar(10),
    ocupacionPadres varchar(50),
    ultimaEmp 		varchar(40),
    telEmp 			varchar(30),
    nombreJefe 		varchar(60),
    puestoJefe 		varchar(30),
    razonEmp 		varchar(80),
    explicaEmp 		varchar(160),
    demandas 		varchar(30),
    explicaDem 		varchar(160),
    tieneLic 		varchar(3),
    tipoLic 		varchar(10),
    numeroLic 		varchar(20),
    vigenciaLic 	varchar(20),
    casaPropia 		varchar(5),
    numHabitantes 	varchar(3),
    primary key (id),
	FOREIGN KEY (idsolicitante) REFERENCES demasys_vitesse_new.empleados_datos(id)
)ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_spanish_ci;


create table demasys_vitesse_new.empleados_cuestionario(
	id				bigint auto_increment,
    idsolicitante 	bigint not null,
	bebida			varchar(2),
    freBebida		varchar(20),
    fuma			varchar(2),
    freFuma			varchar(20),
    drog			varchar(2),
    tiempoDrog		varchar(20),
	actividad		varchar(30),
	escolaridad		varchar(30),
	auto			varchar(2),
    oportunidad		varchar(160),
    compromiso		varchar(160),
	pretenciones	varchar(20),
	gastos			varchar(20),
    futuro			varchar(160),
    recomienda		varchar(60),
    beneficiosVit	varchar(100),
    firma			varchar(2),
    opinionRef		varchar(160),
    opinionMer		varchar(160),
    suvenir			varchar(2),
    razonSuvenir	varchar(40),
    ganarGente		varchar(40),
    reaccion		varchar(40),
    correr			varchar(2),
    velocidad		varchar(20),
    ciudad			varchar(20),
	razonCiudad		varchar(40),
	metaVida		varchar(60),
    familiaIdent	varchar(20),
    sitPais			varchar(60),
    futuroHijo		varchar(60),
    finesSemana		varchar(60),
    apodo			varchar(20),
    primary key (id),
	FOREIGN KEY (idsolicitante) REFERENCES demasys_vitesse_new.empleados_datos(id)
)ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_spanish_ci;